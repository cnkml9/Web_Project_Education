@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "";
}
<link href="~/login/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
<style type="text/css">
    body {
        margin-top: 20px;
        background: rosybrown;
    }

    .account-block {
        padding: 0;
        background-image: url(https://bootdey.com/img/Content/bg1.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        position: relative;
    }

        .account-block .overlay {
            -webkit-box-flex: 1;
            -ms-flex: 1;
            flex: 1;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .account-block .account-testimonial {
            text-align: center;
            color: #fff;
            position: absolute;
            margin: 0 auto;
            padding: 0 1.75rem;
            bottom: 3rem;
            left: 0;
            right: 0;
        }

    .text-theme {
        color: #5369f8 !important;
    }

    .btn-theme {
        background-color: #5369f8;
        border-color: #5369f8;
        color: #fff;
    }
</style>
@*<h1>@ViewData["Title"]</h1>
*@<div id="main-wrapper" class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card border-0">
                <div class="card-body p-0">
                    <div class="row no-gutters">
                        <div class="col-lg-6 d-none d-lg-inline-block">
                            <div class="account-block rounded-right">
                                <div class="overlay rounded-right"></div>
                                <div class="account-testimonial">
                                    <h4 class="text-white mb-4"></h4>
                                    <p class="lead text-white"></p>
                                    <p>Mustafa ÇİFTCİ</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="mb-5 d-flex justify-content-center">
                                    <h3 class="h4 font-weight-bold">
                                        Giriş Yap veya Kayıt Ol
                                    </h3>
                                </div>
                                <div class="row d-flex justify-content-center m-2 mb-5">
                                    <img style="width: 100%" src="~/login/1.jpg" />
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <form id="account" method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">

                                        <label asp-for="Input.KullaniciAd"></label>
                                        <input asp-for="Input.KullaniciAd" class="form-control" />
                                        <span asp-validation-for="Input.KullaniciAd" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>

                                    <div class="mt-3" id="sifreunuttum">
                                        <div>
                                            <a id="forgot-password" asp-page="./ForgotPassword"
                                               style="text-decoration: underline; color: #555555;float: right; margin-bottom: 20px;">Şifreni mi Unuttun ?</a>
                                        </div>

                                    </div>
                                    <div class="">
                                        <button type="submit" class="btn btn-dark button-login">
                                            Giriş
                                        </button>
                                    </div>
                                    <div class="mt-3" id="sifreunuttum">
                                        <div class="register-text">
                                            Hesabın yok mu?
                                        </div>
                                    </div>
                                    <div class="">
                                        <a type="submit" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-dark button-login" style="margin-top: 0 !important;">
                                            Şimdi Kayıt Ol
                                        </a>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" ></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" ></script>