@model List<EgitimWeb.Entites.Egitim> 

    
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class=" container mx-auto">
    <h1 class="text-2xl sm:text-4xl my-6 font-medium">Sınavlar</h1>
    <div class=" grid grid-cols-6 gap-4">
        <!-- card -->
        @foreach (var item in Model.ToList())
        {
            <div class="bg-red-500 p-4 h-44 col-span-6  md:col-span-3 lg:col-span-2 rounded-xl relative group ">
                <img class="absolute right-0 bottom-0 w-fit h-40 group-hover:h-44 transition-all z-30" src="~/img/@item.resimYolu" alt="">
                <div class="text-white w-4/6 flex flex-col gap-1 md:gap-2">
                    <h1 class="text-xl lg:text-3xl ">@item.Ad</h1>
                    <p class="text-md lg:text-xl w-4/6">@item.Ad Kursları</p>
                    <div class="flex flex-row mt-4 gap-2 z-40">

                 <a  asp-area="" asp-action="TYT" asp-controller="Kurslar" class="text-md py-1 px-2 bg-white text-black rounded-md hover:bg-black hover:text-white">Detaylı Bilgi</a>
                 <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="text-md py-1 px-2 bg-white text-black rounded-md hover:bg-black hover:text-white">Kayıt Ol</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>